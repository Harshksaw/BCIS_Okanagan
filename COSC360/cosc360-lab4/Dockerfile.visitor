FROM nginx:alpine
COPY index.html /usr/share/nginx/html/index.html
COPY visitor_count.html /usr/share/nginx/html/visitor_count.html
RUN echo 'server { listen 80; location /visitor_count { try_files /visitor_count.html =404; } location / { root /usr/share/nginx/html; index index.html; } }' > /etc/nginx/conf.d/default.conf
EXPOSE 80
